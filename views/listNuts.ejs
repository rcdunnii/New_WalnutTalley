                    <div class="list">
		         <!--  List loading Engine   -->
                    <% if (searching !== true) { %>
                        <div class="content">						
                            <ul class="listBookEntry">
                                <% for (var i = 0; i < numNuts; i++) { %>
                                    <% 
    									var id_num = nuts[i]._id,
