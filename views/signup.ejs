<title>OurChestnuts Sign Up</title>
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
<link rel="stylesheet" href="/css/signup.css">
<link rel="shortcut icon" href="/images/favicon.ico"> 
<script>
  
// TOUCH_JS (default)
// Create os object
if(typeof os !== 'object'){
	var os = {};
}

// Check for mobile and table devices in navigator.userAgent
if (/(android|bb\d+|meego).+mobile|avantgo|bada\/|blackberry|blazer|compal|elaine|fennec|hiptop|iemobile|ip(hone|od)|iris|kindle|lge |maemo|midp|mmp|mobile.+firefox|netfront|opera m(ob|in)i|palm( os)?|phone|p(ixi|re)\/|plucker|pocket|psp|series(4|6)0|symbian|treo|up\.(browser|link)|vodafone|wap|windows (ce|phone)|xda|xiino|android|ipad|playbook|silk/i.test(navigator.userAgent)){
	os.isTouchDevice = true;
}
else{
	os.isTouchDevice = false;
}

if(os.isTouchDevice) {
    document.getElementsByTagName('html')[0].className += 'is-mobile-device';
}
</script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="https://jqueryvalidation.org/files/dist/jquery.validate.min.js"></script>
<script src="https://jqueryvalidation.org/files/dist/additional-methods.min.js"></script>


<script type="text/javascript">
$(function() {
  // Handler for .ready() called.

       $('form').each(function () { // attach to all form elements on page
        $(this).validate({ // initialize plugin on each form
            rules: {
                emailNotRegistered: {
                    required: true,
                    email: true
                },
                newPassword1: {
                    required: true,
                    minlength: 5
                },
                newPassword2: {
                    required: true,                
                    equalTo: "#createPassword"
                },
                emailAddressRegistered: {
                    required: true,
                    email: true
                } /*,
                registeredPassword: {
                    required: true,
                    minlength: 5
                } */
            },
            messages: { // global options for plugin
                emailNotRegistered: {
                    required: "Email required",
                    email: "Valid email address required"
                },
                newPassword1: {
                    required: "Password required",
                    minlength: "Password must be at least 5 characters"
                },
                newPassword2: {
                    required: "Confirm Password",
                    equalTo: "Passwords must match"
                },
                emailAddressRegistered: {
                    required: "Email Required",
                    email: "Valid email address required"
                } /*,
                registeredPassword: {
                    required: "Password required",
                    minlength: "Enter correct password"
                } */
            }
        });
    });
});
       
</script>
<script src="https://www.google.com/recaptcha/api.js?render=6LeBOM4UAAAAAC14bwSvFo2N1WYPwoxqu1adXObT"}></script>

</head>
<body>
    <div class="page-wrapper">
        <div class="mainContent">
            <div class="titleContainer">
                <h1><center>Create Account</center></h1>
            </div>
                
            <div id="registerForm">
                <div class="sign-in-box">                        
                    <form method='POST' action="/signup" name="newContact" id="registerContactForm">
                        
                        <div>
                            <label for="emailNotRegistered">Email Address</label>
                            <input type="email" name="email" value="" id="emailNotRegistered" tabindex="1" maxlength="255" class="required" title="This is a required field" autofocus="true" />
                        </div>
                        <div>
                            <div>
                                <label for="createPassword">Create Password</label>
                                <input name="newPassword1" value="" id="createPassword" type="password"  tabindex="2" maxlength="70" autocomplete="off" />
                            </div>
                            <div>
                                <label for="confirmPassword">Confirm Password</label>
                                <input name="newPassword2" id="confirmPassword" type="password"  tabindex="3" maxlength="70" autocomplete="off" />
                            </div>
                            <div class="signupNav">                                   
                                    <span class="lock-icon-box gold"><i class="fa fa-lock"></i></span>
                                    <input id="createSubmit" alt="Create Account" type="submit"  tabindex="4" name="submit" value="Create Account"  />                                   
                                    <input id="cancelSubmit" alt="Cancel" type="button" tabindex="5" name="cancel" value="Cancel" onclick="window.history.go(-1); return false;" />                                    
                            </div>
                        </div>
						<input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response"/>
                    </form>
                </div>
                <script>                    
                   grecaptcha.ready(function() {
                      grecaptcha.execute('6LeBOM4UAAAAAC14bwSvFo2N1WYPwoxqu1adXObT', {action: 'signup'}).then(function(token) {
                         console.log("Token returned is:" + token)
                         document.getElementById('g-recaptcha-response').value = token;
                       }); 
                    });                   
                </script>
                <div class="loginLink">
                <p>Already have an account?<span class="loginLinkSpan"><a href="/login"> Login </a> Or go <a href="/">Home</a></span></p>                            
                    <div class="text-center designLogo">
                        <p>Logic by <a href="http://scotch.io">Scotch</a>.</p>      
                    </div>
                </div>
            </div> <!-- register form id -->

            <div class="warn">
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>
            </div>
        </div>      <!--mainContent class -->
    </div>          <!--page-wrapper class -->


</body>

</html>